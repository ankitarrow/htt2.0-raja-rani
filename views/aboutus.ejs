        nav ul li a {
            color: #fff;
            text-decoration: none;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        h1 {
            color: #333;
            font-family: 'Poppins', sans-serif; /* Changed font family to Poppins */
            text-align: center;
            font-size: 36px; /* Adjust font size as needed */
            font-weight: bold;
        }

        h3 {
            color: #555;
        }

        p {
            color: #777;
        }

        .submit-button {
            padding: 10px 20px;
            background-color: #333;
