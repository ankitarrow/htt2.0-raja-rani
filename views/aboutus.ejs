            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Background Image for About Us Section */
        #about {
            background-size: cover;
            background-position: center;
            padding: 50px 0;
            color: #fff; /* You may need to adjust text color for better readability */
        }

        .courses-button {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .poppins-thin {
            font-family: "Poppins", sans-serif;
            font-weight: 100;
            font-style: normal;
        }

        /* Lato Font Family for Mission and Vision */
        h3.mission,
        h3.vision,
        p.mission,
        p.vision {
            font-family: 'Lato', sans-serif;
            font-weight: 400;
        }
        .card {
            margin-bottom: 20px;
            border-radius: 20px; /* Border radius for smoother curvature */
            padding: 20px;
            background-color: #ffffcc; /* Light yellow color */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Border shadow */
        }
        
        /* Apply border-radius to top left and bottom right corners */
        .card:nth-child(odd) {
            border-radius: 20px 0 0 20px;
        }
        
        .card:nth-child(even) {
            border-radius: 0 20px 20px 0;
        }
        

        .card-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-content {
            font-size: 16px;
        }
